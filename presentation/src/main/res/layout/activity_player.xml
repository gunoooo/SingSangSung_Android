<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.gunwoo.karaoke.singsangsung.viewmodel.PlayerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <kr.co.prnd.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FBFBFB"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/youtube_player_view">
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30dp"/>

            <ImageView
                android:id="@+id/play_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/colorBlackTransparent"
                android:src="@drawable/ic_pause"
                android:onClick="@{() -> viewModel.onClickPause()}" />

            <ImageView
                android:id="@+id/record_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:tint="@color/colorRed"
                android:src="@drawable/ic_record"
                android:onClick="@{() -> viewModel.onClickRecord()}" />

            <ImageView
                android:id="@+id/stop_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@color/colorBlackTransparent"
                android:src="@drawable/ic_stop"
                android:onClick="@{() -> viewModel.onClickStop()}" />

            <ImageView
                android:id="@+id/music"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>